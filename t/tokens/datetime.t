use Test2::V0;
use TOML::Tiny::Grammar;

my $re = qr{ ((?&DateTime)) $TOML }x;

my @valid = (
  '1979-05-27T07:32:00Z',
  '1979-05-27T00:32:00-07:00',
  '1979-05-27T00:32:00.999999-07:00',
  '1979-05-27 07:32:00Z',
  '1979-05-27T07:32:00',
  '1979-05-27T00:32:00.999999',
  '1979-05-27',
  '07:32:00',
  '00:32:00.999999',
);

ok($_ =~ /$re/, $_) for @valid;

done_testing;
